@{
    ViewData["Title"] = "Claim Submitted";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Linking the uploaded Bootstrap CSS -->
    <link rel="stylesheet" href="bootstrap.min (1).css" />

    <!-- Optional: Bootstrap CDN (If uploaded CSS not working) -->
    <!--
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    -->
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Claim Submitted</h4>
                    </div>
                    <div class="card-body">
                        <p class="text-center fs-5 mt-3 mb-4">
                            🎉 Your claim has been successfully submitted!
                        </p>
                        <div class="d-grid gap-2">
                            <a href="/" class="btn btn-primary btn-lg">Go to Home</a>
                            <a href="/claims" class="btn btn-outline-secondary btn-lg">View Your Claims</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional: Bootstrap JS & dependencies (if needed for interactions) -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    -->
</body>
</html>
